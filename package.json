{
  "name": "quick-wrap",
  "version": "1.2.0",
  "description": "Quick Wrap desktop/mobile wrapper",
  "private": true,
  "main": "electron/main.cjs",
  "scripts": {
    "desktop": "electron .",
    "desktop:build": "electron-builder",
    "desktop:build:win": "electron-builder --win --x64",
    "desktop:build:mac": "electron-builder --mac",
    "desktop:build:linux": "electron-builder --linux",
    "web:sync": "node scripts/sync-web.cjs",
    "android:init": "npm run web:sync && npx cap add android",
    "android": "npm run web:sync && npx cap sync android && npx cap open android",
    "android:apk": "npm run web:sync && npx cap sync android && node scripts/build-android-apk.cjs"
  },
  "devDependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/cli": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "electron": "^29.4.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.9.3"
  },
  "build": {
    "appId": "com.quickwrap.app",
    "productName": "Quick Wrap",
    "icon": "assets/icon.png",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "auth.js",
      "phoneData.js",
      "*.png",
      "electron/**/*",
      "scripts/**/*",
      "www/**/*",
      "assets/**/*",
      "capacitor.config.ts",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "node_modules/app-builder-lib/templates/icons/proton-native/proton-native.ico",
      "uninstallerIcon": "node_modules/app-builder-lib/templates/icons/proton-native/proton-native.ico",
      "installerHeaderIcon": "node_modules/app-builder-lib/templates/icons/proton-native/proton-native.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Quick Wrap",
      "deleteAppDataOnUninstall": false,
      "displayLanguageSelector": false,
      "warningsAsErrors": false
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
